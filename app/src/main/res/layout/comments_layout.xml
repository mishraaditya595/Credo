<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/author_profile_image_comments_IV"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait"
        />

    <TextView
        android:id="@+id/username_comments_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/author_profile_image_comments_IV"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Username"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/comment_message_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/author_profile_image_comments_IV"
        android:layout_below="@+id/username_comments_TV"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:text="comments"
        android:textSize="20sp"
        />

</RelativeLayout>